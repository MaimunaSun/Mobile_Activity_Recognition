<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">


    <EditText
        android:id="@+id/editTextActive"
        android:layout_width="179dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:hint="Active Time (Hours)"
        app:layout_constraintBottom_toTopOf="@+id/editTextCalories"
        app:layout_constraintEnd_toStartOf="@+id/editTextCalories"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editTextCalories"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextCalories"
        android:layout_width="176dp"
        android:layout_height="41dp"
        android:layout_marginEnd="16dp"
        android:hint="Calories Burned"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/editTextActive"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editTextActive" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginBottom="36dp"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:text="Profile Creation"
        app:autoSizeMaxTextSize="64sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/textViewPersonalized"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459" />


    <TextView
        android:id="@+id/textViewPersonalized"
        android:layout_width="410dp"
        android:layout_height="25dp"
        android:layout_marginBottom="24dp"
        android:text="Personalized Goals"
        app:layout_constraintBottom_toTopOf="@+id/editTextActive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="410dp"
        android:layout_height="25dp"
        android:layout_marginBottom="4dp"
        android:text="Weight"
        app:layout_constraintBottom_toTopOf="@id/editTextTextWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextWeight"
        android:layout_width="412dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Weight (Kg)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/textViewHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="406dp"
        android:layout_height="25dp"
        android:layout_marginBottom="4dp"
        android:text="Height"
        app:layout_constraintBottom_toTopOf="@id/editTextTextHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextHeight"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Height (cm)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/textViewDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="410dp"
        android:layout_height="25dp"
        android:text="Date of Birth"
        app:layout_constraintBottom_toTopOf="@id/editTextTextDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextDate"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="YYYY-MM-DD"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/buttonEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="407dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toTopOf="@id/textViewWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
